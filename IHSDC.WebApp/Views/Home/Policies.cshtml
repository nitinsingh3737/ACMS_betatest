<!DOCTYPE html>
<html>
<head>
    <style>
        .container {
            display: flex;
        }

        .column {
            flex: 1;
            padding: 20px;
        }

            .column:nth-child(odd) {
                background-color: #f1f1f1;
            }

            .column:nth-child(even) {
                background-color: #e1e1e1;
            }

        .file-link {
            display: block;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="column">
            <h2>Policies</h2>
            @{
                string inputFile = "aa7helpfile.pdf";

                string watermarkText = "Confidential";

                string modifiedFile = PdfWatermark.AddWatermark(inputFile, watermarkText);


            }

            <iframe src="@Url.Content(modifiedFile)" width="100%" height="600px"></iframe>

            @{
                if (System.IO.File.Exists(modifiedFile))
                {
                    System.IO.File.Delete(modifiedFile);

                }
            }

            <a href="/path/to/file1.pdf" class="file-link">Policy 1</a>
            <a href="/path/to/file1.pdf" class="file-link">Policy 1</a>
            <a href="/path/to/file2.zip" class="file-link">Policy 2</a>
            <a href="/path/to/file3.docx" class="file-link">Policy 3</a>
        </div>

        <div class="column">
            <h2>Forms</h2>
            <a href="/path/to/file4.jpg" class="file-link">Form 1</a>
            <a href="/path/to/file5.txt" class="file-link">Form 2</a>
            <a href="/path/to/file6.xlsx" class="file-link">Form 3</a>
        </div>
    </div>
</body>
</html>
