    color: black;  text-align:center">
                    <label><b><u>PART - II RECOMMENDATION BY UNIT COMMANDER</u></b></label>

                </div>
                <div class="row">
                    <div class="col-5">
                    </div>
                    <div class="col-2">

                        @Html.DropDownListFor(m => m.RecomForCat, (new IHSDC.WebApp.Models.MasterModels()).LoadAppearingFor(), "--Select CatIR --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })

                    </div>
                    <div class="col-5">
                    </div>
                </div>
            }
            <br />
            <div class="row">
                <div class="col-4"></div>
                    <div class="col-2" style="margin-left: 12%;">
                        <button type="submit" id="btnupdate" value="@ViewBag.ButtonName" name="btnval" class="btn btn-info">@ViewBag.ButtonName</button>
                     
                    </div>
                    <div class="col-5">
