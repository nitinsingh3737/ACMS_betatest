    @section Scripts {
        @Scripts.Render("~/bundles/jqueryui")
        @Styles.Render("~/Content/cssjqryUi")
        <script type="text/javascript">


            function CheckHrs() {
               
                var DayHrsLastThreeMonth = $("#DayHrsLastThreeMonth").val();
                var NighHrsLastSixMonth = $("#NighHrsLastSixMonth").val();
                var TotalCptHrsPresentTypeDay = $("#TotalCptHrsPresentTypeDay").val();
                var OnHelicoptorDay = $("#OnHelicoptorDay").val();
                var CaptHrsDayOnAllTypes = $("#CaptHrsDayOnAllTypes").val();
                var TotalCptHrsPresentTypeNight = $("#TotalCptHrsPresentTypeNight").val();
                var OnHelicoptornight = $("#OnHelicoptornight").val();
                var CaptHrsNightOnAllTypes = $("#CaptHrsNightOnAllTypes").val();
                if (DayHrsLastThreeMonth == '0.00') {
                    $("#DayHrsLastThreeMonth").val('');
                   $("#DayHrsLastThreeMonth").prop("required", true);
                }
                if (NighHrsLastSixMonth == '0.00') {
                    $("#NighHrsLastSixMonth").val('');
                    $("#NighHrsLastSixMonth").prop("required", true);

                }
                if (TotalCptHrsPresentTypeDay == '0.00') {
                    $("#TotalCptHrsPresentTypeDay").val('');
                    $("#TotalCptHrsPresentTypeDay").prop("required", true);

                }

                if (OnHelicoptorDay == '0.00') {
                    $("#OnHelicoptorDay").val('');
                    $("#OnHelicoptorDay").prop("required", true);

                }

                if (CaptHrsDayOnAllTypes == '0.00') {
                    $("#CaptHrsDayOnAllTypes").val('');
                    $("#CaptHrsDayOnAllTypes").prop("required", true);

                }

                if (TotalCptHrsPresentTypeNight == '0.00') {
                    $("#TotalCptHrsPresentTypeNight").val('');
                    $("#TotalCptHrsPresentTypeNight").prop("required", true);

                }

                if (OnHelicoptornight == '0.00') {
                    $("#OnHelicoptornight").val('');
                    $("#OnHelicoptornight").prop("required", true);

                }
                if (CaptHrsNightOnAllTypes == '0.00') {
                    $("#CaptHrsNightOnAllTypes").val('');
                    $("#CaptHrsNightOnAllTypes").prop("required", true);

                }


            }

            $("#btnupdate").click(function () {
                CheckHrs();
            })
            $(document).ready(function () {               
                CheckHrs();
                var IsNotification = $("#IsNotification").val();

                if (IsNotification == "True") {
                    $("#AppearingFor option[value='Not Appeared']").remove();
                }
              var   RemarksAppearingddl= $("#RemarksAppearingddl").val();
                if (RemarksAppearingddl == '') {
                    $("#dvRemarksAppearingddl").hide();
                }
                else {
                    $("#dvRemarksAppearingddl").show();
                    ("#RemarksAppearingddl").prop("required", true);

                }
            })
            function Changes(obj) {              
                var va = $(obj).val();
                if (va == "Not Appeared") {
                    $("#RemarksAppearingddl").prop("required", true);
                    $("#AircraftType").prop("required", false);
                    $('#AircraftType').val('');
                    $("#dvAircraftType").hide();
                    $("#dvRemarksAppearingddl").show();                    
                }
                else {
                    $("#RemarksAppearingddl").prop("required", false);
                    $("#AircraftType").prop("required", true);
                    $('#RemarksAppearingddl').val('');
                    $("#dvRemarksAppearingddl").hide();
                    $("#dvAircraftType").show();
                }
            }

