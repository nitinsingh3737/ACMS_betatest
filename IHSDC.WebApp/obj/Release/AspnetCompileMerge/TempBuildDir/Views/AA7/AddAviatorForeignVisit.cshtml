
@model IHSDC.WebApp.Models.AviatorForeignVisitCRUD
@using IHSDC.WebApp.Connection

@{

    var message = TempData["Message"] ?? string.Empty;
    var messageStatus = TempData["messageStatus"] ?? string.Empty;
    var messagemidStatus = TempData["messagemidStatus"] ?? string.Empty;

    ViewBag.Title = " Aviator Foreign Visit  ";
    Layout = "~/Views/Shared/_NewAA7LayoutMenu.cshtml"; int sno = 0;
}

@using (Html.BeginForm("AddAviatorForeignVisit", "AA7", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="card-body">
        <div class="modal fade" id="SelfDeclaration">
            <div class="modal-dialog" style="margin-top:350px">
                <div class="modal-content">
                    <h4 style="text-align:center">Declaration</h4>
                    <p style="margin-left:10px;margin-right:10px;font-size:14px;font-family:Arial">I <b><u>@SessionManager.UserName</u></b> solemnly declare the information mentioned herein is true and correct to the best of my beliefs.</p>
                    <div class="modal-footer">
                        <button type="submit" id="btnval" value="@ViewBag.ButtonName" name="btnval" class="btn btn-success">@ViewBag.ButtonName</button>
                        <a id="btnCancel" style="color:white;" class="btn btn-danger" data-dismiss="modal">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
        <span id="spnFPTypeId" style="display:none">@ViewBag.ForeignPostingTypeId</span>
        @if (SessionManager.IsPermission == 1 || SessionManager.IsPermission == 3 || SessionManager.IsPermission == 5)
        {

            <div class="rcorners">
                <div class="row">
                    <div class="col-2">
                        <p class="mb-0"> Aviator Name</p>
                        @*@Html.DropDownListFor(m => m.Aviator_ID, (new IHSDC.WebApp.Models.MasterModels()).LoadAviatorName(), "--Select Aviator  Name --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })*@
                        @Html.HiddenFor(m => m.Aviator_ID)
                        @Html.HiddenFor(m => m.IsHistory)
                        @Html.TextBoxFor(m => m.AviatorName, new { @class = "form-control", @required = true, @onkeyup = "ValInData(this)", style = "font-weight: bold;color: black; font-size: 14px;", @readonly = true })


                    </div>


                    <div class="col-2">
                        <p class="mb-0"> Vis Type</p>
                        @Html.DropDownListFor(m => m.ForeignPostingTypeId, (new IHSDC.WebApp.Models.MasterModels()).LoadForeignPostingType(), "--Select Type --", new { @class = "select form-control", @data_live_search = "true", @Required = true })
                    </div>

                    <div class="col-2">
                        <p class="mb-0"> Foreign Appt</p>
                        @Html.TextBoxFor(m => m.ForeignAppt, new { @class = "form-control", @onkeyup = "ValInData(this)", @onkeypress = "return onlyAlphaNumeric(event)" })
                    </div>

                    <div class="col-2">
                        <p class="mb-0"> From Date</p>
                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @required = true, @onchange = "isDate(this)", @placeholder = "dd/mm/yyyy" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">To Date</p>
                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @required = true, @onchange = "isDate(this),check(this,'FromDate','From Date')", @placeholder = "dd/mm/yyyy" })
                    </div>

                    <div class="col-2">
                        <p class="mb-0"> Country</p>
                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control", @onkeyup = "ValInData(this)", @onkeypress = "return onlyAlphaNumeric(event)" })
                    </div>

                    <div class="col-2">
                        <p class="mb-0">Remarks</p>
                        @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control", @onkeyup = "ValInData(this)", @onkeypress = "return onlyAlphaNumeric(event)" })
                    </div>

                </div>


                <div class="d-flex justify-content-center" style="margin-top:10px;padding-left:5px;">
                    @if (ViewBag.ButtonName == "Update")
                    {
                        @*<button type="submit" value="@ViewBag.ButtonName" name="btnval" class="btn btn-success">@ViewBag.ButtonName</button>*@
                    <button type="button" data-toggle="modal" data-target="#SelfDeclaration" id="BtnDeclaration" value="ForeignVisit" class="btn btn-success">Save</button>
                    }
                    &nbsp;&nbsp;&nbsp;
                    <a class="btn btn-info" href="@Url.Action("AddAviatorForeignVisit","AA7",new { id = string.Empty })" target="_top">
                        Back
                    </a>

                </div>

                <div style="float:right;margin-top:-15px; font-size:12px;color:red;">

                    @if (string.IsNullOrEmpty(Model.DateTimeOfUpdate))
                    {
                        <label></label>
                    }
                    else
                    {

                        <label> Last updated by @Model.LastUpdatedBy  @Model.DateTimeOfUpdate</label>


                    }

                </div>



            </div>



        }
        <div class="dropdown-divider"></div>

        <div class="card-body" style="box-shadow: -1px 2px 16px 3px; padding: 0.3rem; border: 1px solid #89CFF0;">
            <div class="aj" style="padding: 0.5rem;">
                <a onclick="location.href='@Url.Action("AddAviatorForeignVisit", "AA7", new { UnitId=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("0") })'">
                    <span class="btn btn-primary"> All</span>
                </a>
                <a onclick="location.href='@Url.Action("AddAviatorForeignVisit", "AA7", new { UnitId=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                    <span class="btn btn-info"> Unit Data</span>
                </a>
                @if (Model.IsHistory.ToString() != "0")
                {
                    <a style="text-align:center;margin-left:500px;">
                        <span style="text-align: center; font-size: 25px; font-family: Arial; color: blueviolet;"><b>History of Foreign Visit : @Model.ILAviatorForeignVisitCRUD[0].AviatorName</b></span>
                    </a>
                }
                </div>


