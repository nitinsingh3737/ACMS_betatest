
@model IHSDC.WebApp.Models.AviatorCoursesCRUD
@using IHSDC.WebApp.Connection

@{

    var message = TempData["Message"] ?? string.Empty;
    var messageStatus = TempData["messageStatus"] ?? string.Empty;
    var messagemidStatus = TempData["messagemidStatus"] ?? string.Empty;
    ViewBag.Title = " Aviator Courses ";
    Layout = "~/Views/Shared/_NewAA7LayoutMenu.cshtml";
    int sno = 0;
}


@using (Html.BeginForm("AddAviatorCourses", "AA7", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="card-body">
        <div class="modal fade" id="SelfDeclaration">
            <div class="modal-dialog" style="margin-top:350px">
                <div class="modal-content">
                    <h4 style="text-align:center">Declaration</h4>
                    <p style="margin-left:10px;margin-right:10px;font-size:14px;font-family:Arial">I <b><u>@SessionManager.UserName</u></b> solemnly declare the information mentioned herein is true and correct to the best of my beliefs.</p>
                    <div class="modal-footer">
                        <button type="submit" id="btnval" value="@ViewBag.ButtonName" name="btnval" class="btn btn-success">@ViewBag.ButtonName</button>
                        <a id="btnCancel" style="color:white;" class="btn btn-danger" data-dismiss="modal">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
        <span id="spnCourseId" style="display:none">@ViewBag.CourseId</span>
        @if (SessionManager.IsPermission == 1 || SessionManager.IsPermission == 3 || SessionManager.IsPermission == 5)
        {

            <div class="rcorners">
                <div class="row">
                    <div class="col-2">
                        <p class="mb-0"> Aviator Name</p>
                        @*@Html.DropDownListFor(m => m.Aviator_ID, (new IHSDC.WebApp.Models.MasterModels()).LoadAviatorName(), "--Select Aviator  Name --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })*@
                        @Html.HiddenFor(m => m.Aviator_ID)
                        @Html.HiddenFor(m => m.IsHistory)
                        @Html.TextBoxFor(m => m.AviatorName, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, style = "font-weight: bold;color: black; font-size: 14px;", @readonly = true })
                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Course Name</p>
                        @Html.DropDownListFor(m => m.Course_ID, (new IHSDC.WebApp.Models.MasterModels()).LoadCourseName(), "--Select Course  Name --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })
                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Course Serial No</p>
                        @Html.TextBoxFor(m => m.CourseSerialNumber, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @onkeypress = "return onlyAlphaNumeric(event)" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Course Grading</p>
                        @Html.DropDownListFor(m => m.CourseGradingId, (new IHSDC.WebApp.Models.MasterModels()).LoadCourseGrading(), "--Select Course Grading --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })

                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Course Start Date</p>
                        @Html.TextBoxFor(m => m.CourseStartDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @required = true, @onchange = "isDate(this),check1(this,'CourseEndDate','Course End Date')", @placeholder = "dd/mmm/yyyy" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Course End Date</p>
                        @Html.TextBoxFor(m => m.CourseEndDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @required = true, @onchange = "isDate(this),check(this,'CourseStartDate','Course Start Date')", @placeholder = "dd/mmm/yyyy" })
                    </div>

                    <div class="col-2">
                        <p class="mb-0">Recom For Instructor </p>
                        @Html.DropDownListFor(m => m.InstructorGrading, (new IHSDC.WebApp.Models.MasterModels()).LoadYesNo(), "--Select Instr Grading --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })

                    </div>

                    <div class="col-2">
                        <p class="mb-0">Special Award</p>
                        @Html.TextBoxFor(m => m.Special_Award, new { @class = "form-control", @onkeyup = "ValInData(this)", @onchange = "Case(this)", @onkeypress = "return onlyAlphaNumeric(event)" })

                    </div>
                    <div class="col-2">
                        <p class="mb-0">Notes</p>
                        @Html.TextBoxFor(m => m.Notes, new { @class = "form-control", @onkeyup = "ValInData(this)", @onkeypress = "return onlyAlphaNumeric(event)" })

                    </div>

                </div>


                <div class="d-flex justify-content-center" style="margin-top:10px;padding-left:5px;">
                    @if (ViewBag.ButtonName == "Update")
                    {
                        @*<button type="submit" value="@ViewBag.ButtonName" name="btnval" class="btn btn-success">@ViewBag.ButtonName</button>*@
                    <button type="button" data-toggle="modal" data-target="#SelfDeclaration" id="BtnDeclaration" value="Courses" class="btn btn-success">Save</button>
                    }
                    &nbsp;&nbsp;&nbsp;
                    <a class="btn btn-info" href="@Url.Action("AddAviatorCourses","AA7",new { id = string.Empty })" target="_top">
                        Back
                    </a>

                </div>


                <div style="float:right;margin-top:-15px; font-size:12px;color:red;">

                    @if (string.IsNullOrEmpty(Model.DateTimeOfUpdate))
                    {
                        <label></label>
                    }
                    else
                    {

                        <label> Last updated by @Model.LastUpdatedBy  @Model.DateTimeOfUpdate</label>


                    }

                </div>




            </div>


        }

        <div class="dropdown-divider"></div>

        <div class="card-body" style="box-shadow: -1px 2px 16px 3px; padding: 0.3rem; border: 1px solid #89CFF0;">
            <div class="aj" style="padding: 0.5rem;">
                <a onclick="location.href='@Url.Action("AddAviatorCourses", "AA7", new { UnitId=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("0") })'">
                    <span class="btn btn-primary"> All</span>
                </a>
                <a onclick="location.href='@Url.Action("AddAviatorCourses", "AA7", new { UnitId=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                    <span class="btn btn-info"> Unit Data</span>
                </a>
                @if (Model.IsHistory.ToString() != "0")
                {
                    <a style="text-align:center;margin-left:500px;">
                        <span style="text-align:center;font-size:25px;font-family:Arial;color:blueviolet;"><b>History of Course : @Model.ILAviatorCoursesCRUD[0].AviatorName</b></span>
                    </a>
                }
            </div>




            <div class="table-responsive">
                <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-info text-white">
                        <tr>
                            <th class="center">S/No</th>
                            <th class="center">Pers No</th>
                            <th class="center">Rank & Name</th>
                            <th class="center">Unit</th>
                            <th class="center">Course Name</th>
                            <th class="center">Course Serial No</th>
                            <th class="center">Start & End Date</th>
                            <th class="center">Grading</th>
                            <th class="center">Special Award</th>
                            <th class="center"> Notes</th>

                            <th class="center" width="100px"> Action </th>
                            <th> History</th>
                            <th> View</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                        @if (ViewBag.count > 0)
                        {
                            foreach (var item in Model.ILAviatorCoursesCRUD)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.ArmyNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AviatorName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UnitName)</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.CourseName))
                                        {
                                            if (item.CourseName != "0")
                                            {
                                                @Html.DisplayFor(modelItem => item.CourseName)
                                            }
                                        }

                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.CourseSerialNumber))
                                        {
                                            if (item.CourseSerialNumber != "0")
                                            {
                                                @Html.DisplayFor(modelItem => item.CourseSerialNumber)
                                            }
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseStartDate)
                                        @if (item.CourseStartDate != null && item.CourseEndDate != null)
                                        {
                                            <span>|</span>
                                        }
                                        @Html.DisplayFor(modelItem => item.CourseEndDate)
                                    </td>
                                    <td>

                                        @if (!string.IsNullOrEmpty(item.Grading))
                                        {
                                            if (item.Grading != "0")
                                            {
                                                @Html.DisplayFor(modelItem => item.Grading)
                                            }
                                        }

                                    </td>
                                    <td>

                                        @if (!string.IsNullOrEmpty(item.Special_Award))
                                        {
                                            if (item.Special_Award != "0")
                                            {
                                                @Html.DisplayFor(modelItem => item.Special_Award)
                                            }
                                        }


                                    </td>
                                    <td>

                                        @if (!string.IsNullOrEmpty(item.Notes))
                                        {
                                            if (item.Notes != "0")
                                            {
                                                @Html.DisplayFor(modelItem => item.Notes)
                                            }
                                        }


                                    </td>



                                    @if (item.IsPermission == 1)
                                    {
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorCourses", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorCourses_ID.ToString()),ViewId= IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()),IsHist=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.IsHistory.ToString()) })'">
                                                <img src="~/images/Editnew.png" width="20" height="20" border="0">
                                            </a>

                                            @*<span>|</span>
                <a id="btndel" data-id='@IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorCourses_ID.ToString())' onclick="DeleteConfirmation(this,'/AA7/DeleteAviatorCourses')">
                    <img src="~/images/Delete.png" width="20" height="20" border="0" />
                </a>*@
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorCourses", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()),TypeRpt=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                                                <i class="fa fa-history" style="font-size:18px" aria-hidden="true"></i>

                                            </a>

                                        </td>



                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    }
                                    else if (item.IsPermission == 5)
                                    {
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorCourses", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorCourses_ID.ToString()) })'">
                                                <img src="~/images/Editnew.png" width="20" height="20" border="0">
                                            </a>
                                        </td>

                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorCourses", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()),TypeRpt=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                                                <i class="fa fa-history" style="font-size:18px" aria-hidden="true"></i>

                                            </a>

                                        </td>



                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>
                                        </td>

                                    }
                                    else if (item.IsPermission == 3 || item.IsPermission == 2)
                                    {
                                        <td>
                                            <span></span>
                                        </td>
                                        <td>
                                            <span></span>
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>

                                        </td>
                                    }




                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="12" style="font-weight:900;color:red;text-align:center"> No Record Found!!!</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
        }
