                    <div class="col-2">
                        <p class="mb-0">Blameworthy</p>
                        @Html.DropDownListFor(m => m.Blameworthy, (new IHSDC.WebApp.Models.MasterModels()).LoadBlameWorthy(), "--Select Blameworthy --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })
                    </div>

                    <div class="col-2">
                        <p class="mb-0">Remarks</p>
                        @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control", @OnChange = "Case(this)", @onkeyup = "ValInData(this)", @onkeypress = "return onlyAlph(event)" })
