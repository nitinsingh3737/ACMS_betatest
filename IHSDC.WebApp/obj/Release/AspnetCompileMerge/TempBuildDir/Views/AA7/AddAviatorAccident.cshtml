                    </div>

                    <div class="col-2">
                        <p class="mb-0"> Stages of Ground Accident</p>
                        @Html.DropDownListFor(m => m.StagesGroundAccidentId, (new IHSDC.WebApp.Models.MasterModels()).LoadStagesGroundAccident(), "--Select Aviator  Name --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })
                    </div>
