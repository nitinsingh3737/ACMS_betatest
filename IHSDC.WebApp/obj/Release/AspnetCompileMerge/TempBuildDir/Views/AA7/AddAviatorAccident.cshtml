                                            <td>
                                                <a onclick="location.href='@Url.Action("AddAviatorAccident", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorAccidentIncident_ID.ToString()) })'">
                                                    <img src="~/images/Editnew.png" width="20" height="20" border="0">
                                                </a>

                                            </td>
                                            <td>
                                                <a onclick="location.href='@Url.Action("AddAviatorAccident", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()),TypeRpt=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                                                    <i class="fa fa-history" style="font-size:18px" aria-hidden="true"></i>

                                                </a>
                                            </td>
                                            <td>
                                                <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
