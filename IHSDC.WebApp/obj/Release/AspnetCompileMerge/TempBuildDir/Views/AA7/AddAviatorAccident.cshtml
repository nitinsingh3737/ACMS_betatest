                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Class of Injury</p>
                        @Html.DropDownListFor(m => m.ClassInjuryId, (new IHSDC.WebApp.Models.MasterModels()).LoadClassInjury(), "--Select Accident Cat Name --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })
                    </div>


                    <div class="col-2">
                        <p class="mb-0"> Date of Accident/Incident</p>
                        @Html.TextBoxFor(m => m.DateOfAccidentIncident, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @onchange = "isDate(this))", @placeholder = "dd/mm/yyyy", @required = true })
                    </div>

                    <div class="col-2">
                        <p class="mb-0">Place of Accident/Incident</p>
                        @Html.TextBoxFor(m => m.PlaceOfAccidentIncident, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @OnChange = "Case(this)", @onkeypress = "return onlyAlph(event)" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Details of Accident/Incident</p>
                        @Html.TextBoxFor(m => m.DetailsOfAccidentIncident, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @OnChange = "Case(this)", @onkeypress = "return onlyAlph(event)" })
