                        </div>
                    </div>
                </div>
            </div>*@

        @if (SessionManager.IsPermission == 1 || SessionManager.IsPermission == 3 || SessionManager.IsPermission == 5)
        {

            <div class="rcorners">
                <div class="row">

                    <div class="col-2">
                        <p class="mb-0"> Aviator Name</p>
                        @*@Html.DropDownListFor(m => m.Aviator_ID, (new IHSDC.WebApp.Models.MasterModels()).LoadAviatorName(), "--Select Aviator  Name --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true, @maxlength = "30" })*@
                        @Html.HiddenFor(m => m.Aviator_ID)
                        @Html.TextBoxFor(m => m.AviatorName, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, style = "font-weight: bold;color: black; font-size: 14px;", @readonly = true })


                    </div>

                    <div class="col-2">
                        <p class="mb-0"> Mobile No</p>
                        @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @onkeypress = "return blockSpecialChar(event)", @maxlength = "11" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Alternate Mobile No</p>

                        @Html.TextBoxFor(m => m.LandLineNo, new { @class = "form-control", @onkeyup = "ValInData(this)",  @onkeypress = "return blockSpecialChar(event)", @maxlength = "11" })
                        @Html.ValidationMessageFor(model => model.LandLineNo, "", new { @class = "danger" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Email</p>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control",   onblur = "validateEmail(this)" })
                    </div>

                    <div class="col-2">
                        <p class="mb-0"> Name of NOK</p>
                        @Html.TextBoxFor(m => m.NOK, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @onchange = "Case(this)", @onkeypress = "return onlyAlph(event)", @maxlength = "30" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Relation with NOK</p>
                        @Html.DropDownListFor(m => m.RelationWithNok, (new IHSDC.WebApp.Models.MasterModels()).LoadNokRelationship(), "--Select Relation --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true, @maxlength = "30" })
                    </div>


                    <div class="col-2">
                        <p class="mb-0"> Marital Status</p>
                        @Html.DropDownListFor(m => m.MaritalStatus, (new IHSDC.WebApp.Models.MasterModels()).LoadMartialStatus(), "--Select Marital Status --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true, @onchange = "CheckMaritalStatus(this)" })

                    </div>

                    <div class="col-2">
                        <p class="mb-0">Name of NOK/Spouse</p>
                        @Html.TextBoxFor(m => m.NameOfSpouse, new { @class = "form-control", @onkeyup = "ValInData(this)", @onchange = "Case(this)", @onkeypress = "return onlyAlph(event)", @maxlength = "30" })
                    </div>


                    <div class="col-2">
                        <p class="mb-0">Mobile No of NOK/Spouse</p>
                        @Html.TextBoxFor(m => m.ContactNoOfSpouse, new { @class = "form-control", @onkeyup = "ValInData(this)", @onkeypress = "return blockSpecialChar(event)", @maxlength = "11" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Email of Spouse</p>
                        @Html.TextBoxFor(m => m.EmailOfSpouse, new { @class = "form-control", onblur = "validateEmail(this)" })
                    </div>


                    <div class="col-2">
                        <p class="mb-0">  House No</p>
                        @Html.TextBoxFor(m => m.ResidentalHouseNo, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @maxlength = "30", @onkeypress = "return onlyAlphaNumeric(event)" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Village/Street</p>
                        @Html.TextBoxFor(m => m.ResidentalVillage_Street, new { @class = "form-control", @onkeyup = "ValInData(this)", @maxlength = "30", @onkeypress = "return onlyAlphaNumeric(event)" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Post Office</p>
                        @Html.TextBoxFor(m => m.ResidentalPostOffice, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @maxlength = "30", @onkeypress = "return onlyAlphaNumeric(event)" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Tehsil</p>
                        @Html.TextBoxFor(m => m.ResidentalTehsil, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @maxlength = "30", @onkeypress = "return onlyAlph(event)" })
                    </div>

                    <div class="col-2">
                        <p class="mb-0"> City</p>
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @onkeyup = "ValInData(this)", @onkeypress = "return onlyAlph(event)", @required = true })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">District</p>
                        @Html.TextBoxFor(m => m.ResidentalDistrict, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @onkeypress = "return onlyAlph(event)" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">State</p>
                        @Html.TextBoxFor(m => m.ResidentalState, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @onkeypress = "return onlyAlph(event)" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">PIN (6 Digit)</p>
                        @Html.TextBoxFor(m => m.ResidentalPincode, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, @onkeypress = "return blockSpecialChar(event)", @maxlength = "6", @pattern = @"\d{6}" })
                    </div>


                </div>


                <div class="d-flex justify-content-center" style="margin-top:10px;padding-left:5px;">

                    <button type="submit" value="@ViewBag.ButtonName" name="btnval" class="btn btn-success">Save</button>
                    @*<button type="button" data-toggle="modal" data-target="#SelfDeclaration" id="BtnDeclaration" value="@ViewBag.ButtonName" class="btn btn-success">@ViewBag.ButtonName</button>*@
                    &nbsp;&nbsp;&nbsp;
                    <a class="btn btn-info" href="@Url.Action("AddAviatorContactDetails","AA7")" target="_top">
                        Back
                    </a>

                </div>





                <div style="float:right;margin-top:-15px; font-size:12px;color:red;">

                    @if (string.IsNullOrEmpty(Model.DateTimeOfUpdate))
                    {
                        <label></label>
                    }
                    else
                    {

                        <label> Last updated by @Model.LastUpdatedBy  @Model.DateTimeOfUpdate</label>


                    }

                </div>



            </div>





        }

        <div class="dropdown-divider"></div>
        <div class="card-body" style="box-shadow: -1px 2px 16px 3px; padding: 0.3rem; border: 1px solid #89CFF0;">
            <div class="aj" style="padding: 0.5rem;">

                <a onclick="location.href='@Url.Action("AddAviatorContactDetails", "AA7", new { UnitId=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("0") })'">
                    <span class="btn btn-primary"> All</span>
                </a>
                <a onclick="location.href='@Url.Action("AddAviatorContactDetails", "AA7", new { UnitId=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                    <span class="btn btn-info"> Unit Data</span>
                </a>
            </div>


            <div class="table-responsive">
                <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-info text-white">
                        <tr>
                            <th class="center">S/No</th>
                            <th class="center">Pers No</th>
                            <th class="center">Rank & Name</th>
                            <th class="center">Unit</th>
                            <th class="center">Mobile No			    </th>
                            @*<th class="center">LandLine No				</th>
                                <th class="center">Email				</th>
                                <th class="center">NOK						</th>*@
                            <th class="center">Relation(NOk)		</th>
                            <th class="center">Marital Status			</th>
                            <th class="center">Name of Spouse			</th>

                            <th class="center" width="100px"> Action </th>

                            <th class="center"> View		</th>

                        </tr>
                    </thead>
                    <tbody id="tbody">
                        @if (ViewBag.count > 0)
                        {
                            foreach (var item in Model.ILAviatorContactDetailsCRUD)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.ArmyNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AviatorName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UnitName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MobileNo)</td>
                                    @*<td>@Html.DisplayFor(modelItem => item.LandLineNo)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.NOK)</td>*@
                                    <td>@Html.DisplayFor(modelItem => item.RelationWithNok)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MaritalStatus)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NameOfSpouse)</td>



                                    @if (item.IsPermission == 1)
                                    {
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorContactDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorDetailID.ToString()) })'">
                                                <img src="~/images/Editnew.png" width="20" height="20" border="0">
                                            </a>

                                            @*<span>|</span>
                <a id="btndel" data-id='@IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorDetailID.ToString())' onclick="DeleteConfirmation(this,'/AA7/DeleteAviatorContactDetails')">
                    <img src="~/images/Delete.png" width="20" height="20" border="0" />
                </a>*@
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    }
                                    else if (item.IsPermission == 5)
                                    {
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorContactDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorDetailID.ToString()) })'">
                                                <img src="~/images/Editnew.png" width="20" height="20" border="0">
                                            </a>
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>
                                        </td>

                                    }
                                    else if (item.IsPermission == 3 || item.IsPermission == 2)
                                    {
                                        <td>
                                            <span></span>
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>

                                        </td>
                                    }






                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="12" style="font-weight:900;color:red;text-align:center"> No Record Found!!!</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}


