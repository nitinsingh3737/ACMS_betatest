                                    <td>@Html.DisplayFor(modelItem => item.ReCatDueDate)</td>
                                    <td>
                                        @*@Html.DisplayFor(modelItem => item.StatusMedical)*@
                                        @if (!string.IsNullOrEmpty(item.StatusMedical))
                                        {
                                            if (item.StatusMedical != "0" && item.StatusMedical != "None")
                                            {
                                                @Html.DisplayFor(modelItem => item.StatusMedical)
                                            }
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Remarks)</td>









                                    @if (item.IsPermission == 1)
                                    {
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorMedical", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorMedical_ID.ToString()),ViewId= IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()),IsHist=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.IsHistory.ToString()) })'">
                                                <img src="~/images/Editnew.png" width="20" height="20" border="0">
                                            </a>

                                            @*<span>|</span>
                <a id="btndel" data-id='@IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorMedical_ID.ToString())' onclick="DeleteConfirmation(this,'/AA7/DeleteAviatorMedical')">
                    <img src="~/images/Delete.png" width="20" height="20" border="0" />
                </a>*@
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorMedical", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()),TypeRpt=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                                                <i class="fa fa-history" style="font-size:18px" aria-hidden="true"></i>

                                            </a>
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>

                                        </td>
                                    }
                                    else if (item.IsPermission == 5)
                                    {
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorMedical", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.AviatorMedical_ID.ToString()) })'">
                                                <img src="~/images/Editnew.png" width="20" height="20" border="0">
                                            </a>
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("AddAviatorMedical", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()),TypeRpt=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                                                <i class="fa fa-history" style="font-size:18px" aria-hidden="true"></i>

                                            </a>
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>

                                        </td>

                                    }
                                    else if (item.IsPermission == 3 || item.IsPermission == 2)
                                    {
                                        <td>
                                            <span></span>
                                        </td>
                                        <td>
                                            <span></span>
                                        </td>
                                        <td>
                                            <a onclick="location.href='@Url.Action("ViewAviatorDetails", "AA7", new { id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aviator_ID.ToString()) })'">
                                                <i class="fa fa-eye" style="font-size:22px" aria-hidden="true"></i>
                                            </a>

                                        </td>
                                    }



                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="12" style="font-weight:900;color:red;text-align:center"> No Record Found!!!</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}


