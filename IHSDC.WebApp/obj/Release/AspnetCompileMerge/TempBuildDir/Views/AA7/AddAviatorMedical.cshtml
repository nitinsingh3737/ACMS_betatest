
@model IHSDC.WebApp.Models.AviatorMedicalCRUD
@using IHSDC.WebApp.Connection

@{

    var message = TempData["Message"] ?? string.Empty;
    var messageStatus = TempData["messageStatus"] ?? string.Empty;
    var messagemidStatus = TempData["messagemidStatus"] ?? string.Empty;

    ViewBag.Title = " Aviator Medical  ";
    Layout = "~/Views/Shared/_NewAA7LayoutMenu.cshtml"; int sno = 0;
}

@using (Html.BeginForm("AddAviatorMedical", "AA7", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="card-body">
        <div class="modal fade" id="SelfDeclaration">
            <div class="modal-dialog" style="margin-top:350px">
                <div class="modal-content">
                    <h4 style="text-align:center">Declaration</h4>
                    <p style="margin-left:10px;margin-right:10px;font-size:14px;font-family:Arial">I <b><u>@SessionManager.UserName</u></b> solemnly declare the information mentioned herein is true and correct to the best of my beliefs.</p>
                    <div class="modal-footer">
                        <button type="submit" id="btnval" value="@ViewBag.ButtonName" name="btnval" class="btn btn-success">@ViewBag.ButtonName</button>
                        <a id="btnCancel" style="color:white;" class="btn btn-danger" data-dismiss="modal">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
        <span id="spnStartDate" style="display:none">@ViewBag.StartDate</span>
        @if (SessionManager.IsPermission == 1 || SessionManager.IsPermission == 3 || SessionManager.IsPermission == 5)
        {


            <div class="rcorners">
                <div class="row">

                    <div class="col-2">
                        <p class="mb-0"> Aviator Name</p>
                        @*@Html.DropDownListFor(m => m.Aviator_ID, (new IHSDC.WebApp.Models.MasterModels()).LoadAviatorName(), "--Select Aviator  Name --", new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })*@
                        @Html.HiddenFor(m => m.Aviator_ID)
                        @Html.HiddenFor(m => m.IsHistory)
                        @Html.TextBoxFor(m => m.AviatorName, new { @class = "form-control", @onkeyup = "ValInData(this)", @required = true, style = "font-weight: bold;color: black; font-size: 14px;", @readonly = true })


                    </div>


                    <div class="col-2">
                        <p class="mb-0"> Type of Medical</p>
                        @Html.DropDownListFor(m => m.TypeMedicalId, (new IHSDC.WebApp.Models.MasterModels()).LoadTypeMedical(), "--Select Type --", new { @class = "select form-control", @data_live_search = "true", @Required = true })
                    </div>

                    <div class="col-2">
                        <p class="mb-0"> Medical Start Date</p>
                        @Html.TextBoxFor(m => m.MedicalStartDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @required = true, @onchange = "isDate(this)", @placeholder = "dd/mm/yyyy" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Medical End Date</p>
                        @Html.TextBoxFor(m => m.MedicalEndDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @required = true, @onchange = "isDate(this),check(this,'MedicalStartDate','Medical Start Date')", @placeholder = "dd/mm/yyyy" })
                    </div>

                    <div class="col-2">
                        <p class="mb-0"> Place of Medical</p>
                        @Html.DropDownListFor(m => m.PlaceMedicalId, (new IHSDC.WebApp.Models.MasterModels()).LoadPlaceMedical(), "--Select Place --", new { @class = "select form-control", @data_live_search = "true", @Required = true })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Medical Cat Date</p>
                        @Html.TextBoxFor(m => m.MedicalCatDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @onchange = "isDate(this),checkDate(this)", @placeholder = "dd/mm/yyyy" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0"> Medical Cat</p>
                        <span id="MedicalCat" class="d-none">@ViewBag.MedicalCat</span>
                        @Html.DropDownListFor(m => m.MedicalCatId, (new IHSDC.WebApp.Models.MasterModels()).LoadMedicalCat(), "--Select Cat --", new { id = "MedicalCatId", @class = "select form-control", @data_live_search = "true", @Required = true })
                    </div>

                    <div class="col-2" id="OtherMedicalRemarksId" title="S?H?A?P?E?">
                        <p class="mb-0">Other Medical Cat</p>
                        @Html.TextBoxFor(m => m.OtherMedicalRemarks, new { id = "OtherMedicalRemarks", @class = "form-control", @onkeyup = "ValInData(this)", @placeholder = "S?H?A?P?E?" })
                    </div>

                    <div class="col-2">
                        <p class="mb-0"> COPE Code</p>
                        <span id="CopeCode" class="d-none">@ViewBag.CopeCode</span>
                        @Html.DropDownListFor(m => m.CopeCodeId, (new IHSDC.WebApp.Models.MasterModels()).LoadCopeCode(), "--Select COPE Code --", new { id = "CopeCodeId", @class = "select form-control", @data_live_search = "true", @Required = true})
                    </div>

                    <div class="col-2" id="OtherCopeRemarksId">
                        <p class="mb-0">Other COPE Code</p>
                        @Html.TextBoxFor(m => m.OtherCopeRemarks, new { id = "OtherCopeRemarks", @class = "form-control", @onkeyup = "ValInData(this)" })
                    </div>


                    <div class="col-2">
                        <p class="mb-0">Duration in Week</p>
                        @Html.TextBoxFor(m => m.DurationInWeeks, new { @class = "form-control", @onkeyup = "ValInData(this)", @onkeypress = "return blockSpecialChar(event)" })
                    </div>
                    <div class="col-2">
                        <p class="mb-0">Recat Due Date</p>
                        @Html.TextBoxFor(m => m.ReCatDueDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @onchange = "isDate(this),check(this,'MedicalCatDate','Medical Cat Date')", @placeholder = "dd/mm/yyyy" })
                    </div>


                    <div class="col-2">
                        <p class="mb-0"> Medical Status</p>
                        @Html.DropDownListFor(m => m.StatusMedicalId, (new IHSDC.WebApp.Models.MasterModels()).LoadMedicalStatus(), new { @data_show_subtext = "true", @class = "select form-control", @data_live_search = "true", @required = true })
                    </div>

                    <div class="col-2">
                        <p class="mb-0">Remarks</p>
                        @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control", @onkeyup = "ValInData(this)", @onkeypress = "return onlyAlphaNumeric(event)" })
                    </div>
                </div>


                <div class="d-flex justify-content-center" style="margin-top:10px;padding-left:5px;">

                    @if (ViewBag.ButtonName == "Update")
                    {
                        @*<button type="submit" value="@ViewBag.ButtonName" name="btnval" class="btn btn-success">@ViewBag.ButtonName</button>*@
                        <button type="button" data-toggle="modal" data-target="#SelfDeclaration" id="BtnDeclaration" value="Medical" class="btn btn-success">Save</button>
                    }
                    &nbsp;&nbsp;&nbsp;
                    <a class="btn btn-info" href="@Url.Action("AddAviatorMedical","AA7",new { id = string.Empty })" target="_top">
                        Back
                    </a>

                </div>


                <div style="float:right;margin-top:-15px; font-size:12px;color:red;">

                    @if (string.IsNullOrEmpty(Model.DateTimeOfUpdate))
                    {
                        <label></label>
                    }
                    else
                    {

                        <label> Last updated by @Model.LastUpdatedBy  @Model.DateTimeOfUpdate</label>


                    }

                </div>



            </div>

        }

        <div class="dropdown-divider"></div>

        <div class="card-body" style="box-shadow: -1px 2px 16px 3px; padding: 0.3rem; border: 1px solid #89CFF0;">
            <div class="aj" style="padding: 0.5rem;">
                <a onclick="location.href='@Url.Action("AddAviatorMedical", "AA7", new { UnitId=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("0") })'">
                    <span class="btn btn-primary"> All</span>
                </a>
                <a onclick="location.href='@Url.Action("AddAviatorMedical", "AA7", new { UnitId=IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption("1") })'">
                    <span class="btn btn-info"> Unit Data</span>
                </a>
                @if (Model.IsHistory.ToString() != "0")
                {
                    <a style="text-align:center;margin-left:500px;">
                        <span style="text-align: center; font-size: 25px; font-family: Arial; color: blueviolet;"><b>History of Medical : @Model.ILAviatorMedicalCRUD[0].AviatorName</b></span>
                    </a>
                }
            </div>



            <div class="table-responsive">
                <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-info text-white">
                        <tr>
                            <th class="center">S/No</th>
                            <th class="center">Pers No</th>
                            <th class="center">Rank & Name</th>
                            <th class="center">Unit</th>
                            <th class="center">Type of Medical </th>
                            <th class="center">Fm Date</th>
                            <th class="center">To Date	</th>
                            @*<th class="center">Place of Medical </th>
                                <th class="center">Medical Cat</th>
                                <th class="center">Cope Code</th>
                                <th class="center">Medical Cat Date	</th>
                                <th class="center">Duration In Weeks</th>*@
                            <th class="center">ReCat Due Date</th>
                            <th class="center">Medical Status</th>
                            <th class="center">Remarks</th>
                            <th class="center" width="100px"> Action </th>
                            <th> History</th>
                            <th> View </th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                        @if (ViewBag.count > 0)
                        {
                            foreach (var item in Model.ILAviatorMedicalCRUD)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.ArmyNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AviatorName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UnitName)</td>
                                    <td>
                                        @*@Html.DisplayFor(modelItem => item.TypeMedical)*@

                                        @if (!string.IsNullOrEmpty(item.TypeMedical))
                                        {
                                            if (item.TypeMedical != "0" && item.TypeMedical != "None")
                                            {
                                                @Html.DisplayFor(modelItem => item.TypeMedical)
                                            }
                                        }

                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.MedicalStartDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MedicalEndDate)</td>
