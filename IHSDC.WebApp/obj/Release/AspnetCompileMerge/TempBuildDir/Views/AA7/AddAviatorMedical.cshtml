        <td>@Html.DisplayFor(modelItem => item.MedicalCat)</td>
        <td>@Html.DisplayFor(modelItem => item.CopeCode)</td>
        <td>@Html.DisplayFor(modelItem => item.MedicalCatDate)</td>
