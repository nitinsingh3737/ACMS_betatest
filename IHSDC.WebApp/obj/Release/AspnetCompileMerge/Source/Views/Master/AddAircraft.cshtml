@model IHSDC.WebApp.Models.AircraftCRUD
@{

    var message = TempData["Message"] ?? string.Empty;
    var messageStatus = TempData["messageStatus"] ?? string.Empty;
    var messagemidStatus = TempData["messagemidStatus"] ?? string.Empty;
    ViewBag.Title = "Add Air craft ";
    Layout = "~/Views/Shared/_NewAA7Layout.cshtml"; int sno = 0;
}

@using (Html.BeginForm("AddAircraft", "Master", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="card-body">
        <div class="row">


            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "danger" })

            <div class="col">
                <label><b>Aircraft Name:</b></label>
                @Html.TextBoxFor(m => m.AircraftName, new { @class = "form-control",  @maxlength = "25", @onkeyup = "ValInData(this)" })


                @Html.ValidationMessageFor(model => model.AircraftName, "", new { @class = "danger" })
            </div>
        </div>
        <div class="dropdown-divider"></div>
        <div class="col-12" style="margin-left:35%">
            <div class="form-group">
                <div class="col-sm-6" style="margin-left:10%">
                    <button type="submit" value="@ViewBag.ButtonName" name="btnval" class="btn btn-success">@ViewBag.ButtonName</button>
                    </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead class="bg-info text-white">
                    <tr>
                        <th class="center">S/No</th>
                        <th class="center">Aircraft Name</th>
                        <th class="center">Edit</th>
                        @*<th class="center">Delete</th>*@
                    </tr>
                </thead>
                <tbody id="tbody">
                    @if (ViewBag.count > 0)
                    {
                        foreach (var item in Model.ILAircraftCRUD)
                        {
                            <tr>
                                <td>
                                    @{ sno++; }
                                    @sno
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.AircraftName)</td>
                                <td>
                                    <a onclick="location.href='@Url.Action("AddAircraft", "Master", new {   id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aircraft_ID.ToString()) })'">
                                        <img src="~/Content/images/Editnew.png" width="30" height="30" border="0">
                                    </a>
                                </td>
                                <!--<td>-->
                                    @*<a onclick="location.href='@Url.Action("DeleteAircraft", "Master", new {   id = IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aircraft_ID.ToString()) })'">
                                <img src="~/Content/images/Delete.png" width="30" height="30" border="0" />
                            </a>*@
                                    <!--<a id="btndel" data-id='@IHSDC.WebApp.RepositryManager.EncryptionManager.Encryption(item.Aircraft_ID.ToString())' onclick="DeleteConfirmation(this,'/Master/DeleteAircraft')">
                                        <img src="~/Content/images/Delete.png" width="30" height="30" border="0" />
                                    </a>




                                </td>-->
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="4" style="font-weight:600;color:red;text-align:center"> No Record Found!!!</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


