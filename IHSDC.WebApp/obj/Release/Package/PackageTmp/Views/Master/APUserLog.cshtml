<div class="card-body" id="lowzoom" style="box-shadow: -1px 2px 16px 3px; padding: 0.5rem;">
    <div class="row">
        <div class="col">
            <h3 style="text-align: center;">
                AP Logs
                <a class="btn btn-info float-right" href="@Url.Action("Index","Home")" target="_top">
                    Back
                </a>
            </h3>

        </div>
    </div>
    @using (Html.BeginForm("APUserLog", "Master", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div style="display:none;" class="rcorners">
            <div class="row">
                <div class="col-2">
                    <p class="mb-0">From Date</p>
                    @Html.TextBoxFor(m => m.LogFromDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @onchange = "isDate(this))", @placeholder = "dd/mm/yyyy", @required = true })
                </div>

                <div class="col-2">
                    <p class="mb-0">To Date</p>
                    @Html.TextBoxFor(m => m.LogToDate, new { @class = "form-control datepicker3", @onkeyup = "ValInData(this)", @onchange = "isDate(this))", @placeholder = "dd/mm/yyyy", @required = true })
                </div>

            </div>
        </div>
        <span id="spnAviator"></span>
        <div class="row">
            <div class="table-responsive" style=" margin-left: 1rem; padding-right: 2rem;">
                <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-info text-white">
                        <tr>
                            <th class="center">Ser No</th>
                            <th class="center">User Name</th>
                            <th class="center">Full Name</th>
                            <th class="center">Unit</th>
                            <th class="center">Role</th>
                            <th class="center" style="display:none">ID</th>
                            <th class="center" style="display:none">Role</th>

                            @if (SessionManager.RoleId == enum1.Administrator)
                            {
                                <th class="center">Switch User</th>

                            }


                            </tr>
                    </thead>
                    <tbody id="tbody">
                        @if (ViewBag.count > 0)
                        {

                            foreach (var item in Model.IAPUserLog)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>

                                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>

                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>

                                    <td>@Html.DisplayFor(modelItem => item.UnitName)</td>

                                    <td>@Html.DisplayFor(modelItem => item.RoleName)</td>

                                    <td style="display:none"><spam class="Aviator_ID">@Html.DisplayFor(modelItem => item.IntId)</spam></td>
                                    <td style="display:none"><spam class="User_Name">@Html.DisplayFor(modelItem => item.UserName)</spam></td>

                                    @if (SessionManager.RoleId == enum1.Administrator)
                                    {

                                        <td>

                                            <button type="button" id="BtnUserLog" class="btn btn-success BtnUserLog">
                                                <i class='far fa-user-circle'></i>
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                        else
                        {
                            @*<tr><td colspan="12" style="font-weight:900;color:red;text-align:center"> No Record Found!!!</td></tr>*@
                        }
                    </tbody>
                </table>
            </div>
        </div>

    }
</div>
