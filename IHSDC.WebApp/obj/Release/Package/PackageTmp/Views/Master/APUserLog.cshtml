<form id="myForm" class="form-horizontal" role="form" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" id="userName" name="userName" />
    <input type="hidden" id="ReturnUrl" name="ReturnUrl" />
</form>

<script>
    $(document).ready(function () {
        $('.BtnUserLog').click(function () {
            // Get the corresponding row data
            var row = $(this).closest('tr');
            var aviatorId = row.find('.Aviator_ID').text();
            var userName = row.find('.User_Name').text();


            $('#ReturnUrl').val('APLOG^' + userName);

            // Perform AJAX POST request
          $.ajax({
            url: '@Url.Action("clientIp", "Master")',
            type: 'GET',
            dataType: 'json',
            success: function(response) {
                if (response === 1) {
                    $.ajax({
                        url: '@Url.Action("Login", "Account")',
                        type: 'POST',
                        data: $('#myForm').serialize(),
                        success: function(response) {
                            if (response == 1) {
                                window.location.href = '@Url.Action("AddInboxNotingFwd", "ACC")';
                            }
                        },
                        error: function(xhr, status, error) {
                            alert('Error: ' + error);
                        }
                    });
                    return true;
                } else {
                    alert("Error. Please Contact System Admin");
                    return false;
                }
            },
            error: function(xhr, status, error) {
                alert('Error:', error);
            }
        });
        });
    });
</script>


<script type="text/javascript">
        $('.CloseLogpoup').on('click', function (e) {
            var modal = document.getElementById("APUserLog");
            modal.style.display = "none";
        });




        $(document).ready(function () {
            $('#dataTable').DataTable({
